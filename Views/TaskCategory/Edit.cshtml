@model TaskManagementSystem.Models.TaskCategory


@{
    if (User.IsInRole("Admin"))
    {
        Layout = "/Views/Shared/_Layout1.cshtml";
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- css link -->
    <!-- <link rel="stylesheet" href="./user.css"> -->

    <link rel="stylesheet" href="/css/Adminlayout.css">
    <link rel="stylesheet" href="~/css/Admintaskmgmt.css" />
    <!-- font-awesome link -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet" />
    <title>Edit</title>
</head>
<body>
    <div class="createtaskcategory-container-section">

        <form asp-action="Edit" class="createtaskcategory-from-section">
            <div asp-validation-summary="ModelOnly" class="task-form-input"></div>
            <div class="createtask-firstrow-section">
                <div class="taskfrom">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="task-form-input" />
                    <span asp-validation-for="Name" class="errormessage"></span>
                </div>
                <div class="taskfrom">
                    <label asp-for="Manager"></label>
                    <select asp-for="ManagerId" class="task-form-input" asp-items="@ViewBag.users">
                        <option disabled> Please select manager</option>
                    </select>
                    <span asp-validation-for="ManagerId" class="errormessage"></span>
                </div>
            </div>
            <div class="category-container-btn">
                <input type="submit" value="Update" class="createbtn btn" />
            </div>
        </form>
    </div>



</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}