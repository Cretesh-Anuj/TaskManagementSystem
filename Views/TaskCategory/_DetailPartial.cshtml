@model TaskManagementSystem.Models.TaskCategory

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- css link -->
    <!-- <link rel="stylesheet" href="./user.css"> -->


    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/taskmangement.css">
    <!-- font-awesome link -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet" />
    <title>ViewTaskCategory</title>
</head>
<body>
    <div id="myModal-detail" class="modal-detail">

        <!-- adduser section start here -->
        <div class="detail-form-section">
            <div class="detail-head-section">
                <h1>Detail</h1>
            </div>
            <div id="detail-content-section" class="detail-content-section">
                <div class="detail-section">
                    <h4 class="detail-title">
                        @Html.DisplayNameFor(model => model.Name)
                    </h4>
                    <h4> @Html.DisplayFor(model => model.Name)</h4>
                </div>
                <div class="detail-section">
                    <h4 class="detail-title">
                        @Html.DisplayNameFor(model => model.Manager)
                    </h4>
                    <h4> @Html.DisplayFor(model => model.Manager.UserName)</h4>
                </div>
            </div>
            <div class="clearfix btnn">
                <button class="clearfix-btnn cancelbtnn">Cancel</button>
            </div>

        </div>
    </div>
</body>
@section scripts
{
    <script src="/Js/layout.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  
    <script>
        var TeamDetailPostBackURL = '/TaskCategory/Details';
        $(function () {
            $("detail-btn").click(function () {
                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                var options = { "backdrop": "static", keyboard: true };
                $.ajax({
                    type: "GET",
                    url: TeamDetailPostBackURL,
                    contentType: "application/json; charset=utf-8",
                    data: { "Id": id },
                    datatype: "json",
                    success: function (data) {
                        debugger;
                        $('#detail-content-section').html(data);
                        $('#myModal-detail').modal(options);
                        $('#myModal-detail').modal('show');

                    },
                    error: function () {
                        alert("Dynamic content load failed.");
                    }
                });
            });
            //$("#closebtn").on('click',function(){
            //    $('#myModal').modal('hide');

            $("#closbtn").click(function () {
                $('#myModal').modal('hide');
            });
        });

    </script>    

}

