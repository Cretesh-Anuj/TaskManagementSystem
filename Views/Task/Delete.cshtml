@model TaskManagementSystem.Models.Task

@{
    if (User.IsInRole("Admin"))
    {
        Layout = "/Views/Shared/_Layout1.cshtml";
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }

}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<ul class="list-group">
    <li class="list-group-item">Task Name: @Model.TaskName</li>
    <li class="list-group-item">Task Description: @Model.TaskDescription</li>
    <li class="list-group-item">Task Status: @Model.Taskstatus</li>
    <li class="list-group-item">Assigned By: @Model.AssignedBy.UserName</li>
    <li class="list-group-item">AssignedDate: @Model.AssignedDate</li>
    <li class="list-group-item">Due Date: @Model.DueDate</li>
    <li class="list-group-item">Task Completed Date : @Model.TaskCompletedDate</li>
    <li class="list-group-item">TaskCategory: @Model.TaskCategory.Name</li>
    <li class="list-group-item">CreatedDate: @Model.CreatedDate</li>
</ul>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ViewTask">Back to List</a>
    </form>

