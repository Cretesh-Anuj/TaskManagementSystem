@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.2/css/bootstrap.min.css'>
    <!-- Font Awesome CSS -->
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.3.1/css/all.css'>
    <!-- css link -->
    <link rel="stylesheet" href="/css/taskmangement.css">
</head>
<body>
   
        
            <div class="container-fluid">
                <div class="row">                         
                            <!-- <div class="col-lg-3 col-md-2"></div> -->
                    <div class="col-lg-4 col-md-8 login-box">
                        <div class="col-lg-12 login-key">
                            <i class="fa fa-key" aria-hidden="true"></i>
                        </div>
                        <div class="col-lg-12 login-title">
                            Login
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="col-lg-12 login-form">
                            <div class="col-lg-12 login-form">
                                <form id="account" method="post">
                                    <div class="form-group">
                                        <label asp-for="Input.Email" class="form-control-label">Email</label>
                                        <input asp-for="Input.Email" type="text" class="form-control">
                                        <span asp-validation-for="Input.Email" class="errormessage"></span>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password" class="form-control-label">PASSWORD</label>
                                        <input asp-for="Input.Password" class="form-control">
                                        <span asp-validation-for="Input.Password" class="errormessage"></span>
                                    </div>
                                    <label class="largerCheckbox">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>

                                    <div class="col-lg-12 loginbttm">

                                        <div class="col-lg-12 login-btm login-button">
                                            <button type="submit" class="btn btn-outline-primary">Login </button>
                                        </div>
                                    </div>
                                    <div class="bottom-links">
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-2"></div>
                    </div>
                       
                           </div>
                         </div>

                <script src="/Javascript/layout.js"></script>

</body>
</html>






















